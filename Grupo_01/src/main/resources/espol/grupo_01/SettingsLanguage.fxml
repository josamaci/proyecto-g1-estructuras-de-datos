            <Button fx:id="btSpanish" alignment="CENTER" contentDisplay="CENTER" onAction="#switchToSpanish" prefHeight="66.0" prefWidth="138.0" styleClass="nextButton" stylesheets="@../../Styles/redbutton.css" text="SPANISH" textAlignment="CENTER" textFill="WHITE">
