         <children>
            <Button fx:id="btBack" alignment="CENTER" contentDisplay="CENTER" onAction="#switchToMainMenu" prefHeight="41.0" prefWidth="106.0" styleClass="optionButton" stylesheets="@../../Styles/button.css" text="BACK" textAlignment="CENTER" textFill="WHITE">
