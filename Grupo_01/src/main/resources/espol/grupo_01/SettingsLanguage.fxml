               </VBox.margin>
            </Button>
            <Button fx:id="btEnglish" alignment="CENTER" contentDisplay="CENTER" onAction="#switchToEnglish" prefHeight="66.0" prefWidth="138.0" styleClass="nextButton" stylesheets="@../../Styles/yellowbutton.css" text="ENGLISH" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Gill Sans MT" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
